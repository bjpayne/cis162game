<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/8.0.111"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.GameGUI"
>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>

    <TextArea fx:id="results" prefHeight="200.0" prefWidth="200.0"
              GridPane.columnSpan="6" GridPane.rowIndex="1"
              GridPane.rowSpan="10" wrapText="true"
    >
        <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </GridPane.margin>
    </TextArea>

    <MenuBar GridPane.columnSpan="2147483647">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="New Game"
                      onAction="#newGame"
            />

            <MenuItem mnemonicParsing="false" text="Close" onAction="#exit"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="How to play"
                      onAction="#help"
            />

            <MenuItem mnemonicParsing="false" text="About Game"
                      onAction="#about"
            />
        </Menu>
    </MenuBar>

    <Label text="Directions" GridPane.columnIndex="6"
           GridPane.halignment="CENTER" GridPane.rowIndex="1"
    />

    <Button mnemonicParsing="false" onAction="#directionUp" prefWidth="80.0"
            text="Up" GridPane.columnIndex="6" GridPane.halignment="CENTER"
            GridPane.rowIndex="2" GridPane.valignment="CENTER"
            fx:id="buttonUp"
    />

    <Button mnemonicParsing="false" onAction="#directionDown" prefWidth="80.0"
            text="Down" GridPane.columnIndex="6" GridPane.halignment="CENTER"
            GridPane.rowIndex="3" GridPane.valignment="CENTER"
            fx:id="buttonDown"
    />

    <Button mnemonicParsing="false" onAction="#directionLeft" prefWidth="80.0"
            text="Left" GridPane.columnIndex="6" GridPane.halignment="CENTER"
            GridPane.rowIndex="4" GridPane.valignment="CENTER"
            fx:id="buttonLeft"
    />

    <Button mnemonicParsing="false" onAction="#directionRight" prefWidth="80.0"
            text="Right" GridPane.columnIndex="6" GridPane.halignment="CENTER"
            GridPane.rowIndex="5" GridPane.valignment="CENTER"
            fx:id="buttonRight"
    />

    <Label text="Health" GridPane.columnIndex="6"
           GridPane.halignment="CENTER" GridPane.rowIndex="6"
    />

    <ProgressBar progress="0.0" GridPane.columnIndex="6"
                 GridPane.rowIndex="7" GridPane.valignment="CENTER"
                 fx:id="healthBar"
    />

    <Label text="Details" GridPane.columnIndex="6"
           GridPane.halignment="CENTER" GridPane.rowIndex="8"
    />

    <Label text="Weapon:" GridPane.columnIndex="6" fx:id="labelWeapon"
           GridPane.halignment="CENTER" GridPane.rowIndex="9"
    />

    <Label text="Suspect:" GridPane.columnIndex="6" fx:id="labelSuspect"
           GridPane.halignment="CENTER" GridPane.rowIndex="10"
    />

    <Label text="Location:" GridPane.columnIndex="6" fx:id="labelLocation"
           GridPane.halignment="CENTER" GridPane.rowIndex="11"
    />

    <Label text="Actions" GridPane.halignment="LEFT" GridPane.rowIndex="11">
        <GridPane.margin>
            <Insets left="10.0"/>
        </GridPane.margin>
    </Label>

    <Button mnemonicParsing="false" onAction="#pickup" prefWidth="80.0"
            text="Pickup" GridPane.columnIndex="1" GridPane.halignment="CENTER"
            GridPane.rowIndex="11" GridPane.valignment="CENTER"
            fx:id="buttonPickup"
    />

    <Button mnemonicParsing="false" onAction="#drop" prefWidth="80.0"
            text="Drop" GridPane.columnIndex="2" GridPane.halignment="CENTER"
            GridPane.rowIndex="11" GridPane.valignment="CENTER"
            fx:id="buttonDrop"
    />

    <Button mnemonicParsing="false" onAction="#eat" prefWidth="80.0" text="Eat"
            GridPane.columnIndex="3" GridPane.halignment="CENTER"
            GridPane.rowIndex="11" fx:id="buttonEat"
    />

    <Button mnemonicParsing="false" onAction="#look" prefWidth="80.0"
            text="Look" GridPane.columnIndex="4" GridPane.halignment="CENTER"
            GridPane.rowIndex="11" fx:id="buttonLook"
    />

    <Button mnemonicParsing="false" onAction="#guess" prefWidth="80.0"
            text="Guess" GridPane.columnIndex="5" GridPane.halignment="CENTER"
            GridPane.rowIndex="11" fx:id="buttonGuess"
    />
</GridPane>
